<!DOCTYPE html>
<html>
  <head>
    <title>Chakaboom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p><%= flash[:notice] %></p>
    <%= current_user&.name %>
    <% if current_user %>
      |
      <%= link_to 'Log Out', session_path, method: :delete %>
    <% end %>
    <%= yield %>
  </body>
</html>
